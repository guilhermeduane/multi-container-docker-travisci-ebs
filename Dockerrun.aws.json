{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "guilhermeduane/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "guilhermeduane/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "guilhermeduane/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "guilhermeduane/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings":[
      {
      "hostPort": 80,
      "containerPort": 80
      }
    ],
      "links" : ["client", "server"]
    }
  ]
}